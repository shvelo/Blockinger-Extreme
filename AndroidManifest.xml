<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.blockinger.extreme"
    android:versionCode="15"
    android:versionName="2.0" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <supports-screens android:normalScreens="true" android:smallScreens="true"
        android:largeScreens="true" android:resizeable="true" 
        android:anyDensity="true" android:xlargeScreens="true"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/iconinger_v2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />

        <activity
            android:name="org.blockinger.extreme.activities.MainActivity"
            android:configChanges="orientation|screenLayout|screenSize"
            android:icon="@drawable/iconinger_v2"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.blockinger.extreme.activities.GameActivity"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name="org.blockinger.extreme.activities.SettingsActivity"
            android:icon="@drawable/ic_settings"
            android:label="@string/title_activity_settings" >
        </activity>

        <activity
            android:name="org.blockinger.extreme.activities.AdvancedSettingsActivity"
            android:icon="@drawable/ic_settings"
            android:label="@string/pref_category_advanced" >
        </activity>

        <activity
            android:name="org.blockinger.extreme.activities.AboutActivity"
            android:icon="@drawable/iconinger_v2"
            android:label="@string/title_activity_about" >
        </activity>
        
        <activity
            android:name="org.blockinger.extreme.activities.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
		
    </application>

</manifest>
